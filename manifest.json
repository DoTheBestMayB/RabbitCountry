{
    "manifest_version": 3,
    "name": "당근나라",
    "description": "네이버 카페에서 게시물 숨기기를 도와줍니다.",
    "version": "1.3",
    "background": {
      "service_worker": "background.js"
    },
    "permissions": [
      "activeTab",
      "scripting",
      "storage",
      "webNavigation",
      "tabs"
    ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "host_permissions": [
    "*://cafe.naver.com/foo*",
    "*://cafe.naver.com/foo#*"
  ]
}