{
    "manifest_version": 3,
    "name": "당근나라",
    "version": "1.3.4",

    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "description": "네이버 카페에서 게시물 숨기기를 도와줍니다.",
    "icons": { "16": "icon16.png",
               "48": "icon48.png",
              "128": "icon128.png" },

    "background": {
      "service_worker": "background.js"
    },
    "commands": {
      "add-bookmark": {
        "suggested_key": "Ctrl+B",
        "description": "보고 있는 게시물 북마크 추가"
      }
    },
    "host_permissions": [
      "*://cafe.naver.com/foo*",
      "*://cafe.naver.com/foo#*",
      "*://cafe.naver.com/ca-fe/cafes/foo*"
    ],
    "permissions": [
      "activeTab",
      "bookmarks",
      "scripting",
      "storage",
      "webNavigation",
      "tabs"
    ]
}